<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment_map_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_map_pager"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_map_pager_height"
        android:layout_marginBottom="@dimen/fragment_map_pager_margin"
        android:layout_marginRight="@dimen/fragment_map_pager_margin"
        android:layout_marginLeft="@dimen/fragment_map_pager_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

