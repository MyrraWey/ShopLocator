<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shops_search_image"
        android:layout_width="@dimen/shops_search_image_size"
        android:layout_height="@dimen/shops_search_image_size"
        android:layout_margin="@dimen/shops_search_margin"
        tools:src="@drawable/shop_icon"/>

    <TextView
        android:id="@+id/shops_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shops_search_image"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/shops_search_margin"
        android:layout_toEndOf="@+id/shops_search_image"
        android:layout_toRightOf="@+id/shops_search_image"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Shop title"/>

    <TextView
        android:id="@+id/shops_search_coord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shops_search_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/shops_search_margin"
        tools:text="23, 44"/>
</RelativeLayout>