<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/owners_autocomplete_image"
        android:layout_width="@dimen/owners_autocomplete_image_size"
        android:layout_height="@dimen/owners_autocomplete_image_size"
        android:layout_margin="@dimen/owners_autocomplete_margin"
        tools:src="@drawable/shop_icon"/>

    <TextView
        android:id="@+id/owners_autocomplete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/owners_autocomplete_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Owner name"/>
</LinearLayout>