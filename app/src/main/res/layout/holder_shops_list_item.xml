<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shops_list_item_background">

    <ImageView
        android:id="@+id/shops_list_item_image"
        android:layout_width="@dimen/holder_shops_list_image_width"
        android:layout_height="@dimen/holder_shops_list_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/holder_shops_list_item_margin"
        tools:src="@drawable/shop_icon"/>

    <TextView
        android:id="@+id/shops_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/holder_shops_list_item_margin"
        android:layout_toEndOf="@+id/shops_list_item_image"
        android:layout_toRightOf="@+id/shops_list_item_image"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Large Text"/>

    <TextView
        android:id="@+id/shops_list_item_coord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shops_list_item_title"
        android:layout_margin="@dimen/holder_shops_list_item_margin"
        android:layout_toEndOf="@+id/shops_list_item_image"
        android:layout_toRightOf="@+id/shops_list_item_image"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Medium Text"/>

    <TextView
        android:id="@+id/shops_list_item_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shops_list_item_image"
        android:layout_alignEnd="@id/shops_list_item_image"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/shops_list_item_image"
        android:layout_margin="@dimen/holder_shops_list_item_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Medium Text"/>
</RelativeLayout>